        <script>
            $(() => {

                $.get('/api/news?limit=6', (response) => {
                    console.log(response)

                    if (response.statusCode == 200) {
                        renderNews(response.response)
                    } else {
                        alert("Something went wrong!")

                    }
                })
            })

            function renderNews(news_list) {
                item_per_row = 3;
                elements = ``
                index = 0
                row = news_list.length % item_per_row == 0 ? news_list.length / item_per_row : news_list.length /
                    item_per_row + 1
                for (var i = 0; i < row; i++) {
                    if(i > 0) elements += "<div class='row mt-3'>"
                    else elements += "<div class='row'>"
                    for (var j = 0; j < item_per_row; j++) {
                        t = ""
                        $.each(news_list[index].tags, (i, tag)=>{
                            t += `<a href="/api/news?tags=${tag}" class="btn btn-outline-primary pb-0 pt-0 mr-1">${tag}</a>`
                        })
                        elements +=
                            `<div class='col-sm-4'>
                                <div class="card border-0">
                                    <div class="card-body">
                                    <h5 class="card-title">${news_list[index].title}
                                    </h5>
                                    <p class="card-text">${news_list[index].body.substring(0, 100)}...</p>
                                    ${t}
                                    </div>
                                </div>
                            </div>`
                        if (index == news_list.length - 1) {
                            break;
                        }
                        index++;

                    }
                    elements += "</div>"
                }
                $("#news").append(elements)
            }
        </script>
